{
  "name": "kargo",
  "productName": "kargo",
  "version": "0.0.1",
  "description": "The Turkish version of a browser with almost no UI.",
  "license": "MIT",
  "repository": "aardaakpinar/kargo",
  "main": "./src/index.js",
  "author": {
    "name": "aardaakpinar",
    "url": "http://aardaakpinar.github.io"
  },
  "scripts": {
    "test": "formatted .",
    "start": "electron .",
    "build": "electron-builder",
    "build:win64": "npm run build -- --win",
    "build:linux": "npm run build -- --linux",
    "build:all": "npm run build -- --all"
  },
  "keywords": [
    "electron-app",
    "electron",
    "browser",
    "kargo"
  ],
  "dependencies": {
    "@cargohq/keyval": "^1.1.0",
    "electron-debug": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^11.0.2",
    "idb-keyval": "^6.2.2",
    "mitt": "^3.0.1",
    "mousetrap": "^1.6.5",
    "normalize-url": "^8.1.1",
    "nprogress": "^0.2.0",
    "tldjs": "^2.3.2",
    "vkey": "^1.0.1",
    "vxv": "^3.1.6",
    "xou": "^2.0.2"
  },
  "devDependencies": {
    "@electron/devtron": "^2.1.1",
    "devtron": "^1.4.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "formatted": "^1.0.0"
  },
  "build": {
    "appId": "com.kargo",
    "productName": "kargo",
    "asar": true,
    "npmRebuild": false,
    "directories": {
      "output": "./dist"
    },
    "files": [
      "**/*",
      "src",
      "!keys",
      "!test",
      "!*.pug",
      "!src/node_modules/test",
      "!release",
      "!.DS_Store",
      "!webpack.config.js",
      "!cmake-js",
      "!pkg",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/node_modules/.bin",
      "!**/{.DS_Store,.git,.gitignore}"
    ],
    "win": {
      "icon": "./src/static/icon.ico"
    },
    "linux": {
      "icon": "./src/static/icon.png",
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ],
      "category": "Network"
    }
  }
}
