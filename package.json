{
  "name": "kargo",
  "productName": "kargo",
  "version": "0.0.1",
  "description": "The Turkish version of a browser with almost no UI.",
  "license": "MIT",
  "repository": "aardaakpinar/kargo",
  "main": "./src/index.js",
  "author": {
    "name": "aardaakpinar",
    "url": "http://aardaakpinar.github.io"
  },
  "scripts": {
    "test": "formatted",
    "start": "electron .",
    "build": "electron-builder .",
    "build:win64": "npm run build -- --win",
    "build:mac": "npm run build -- --mac",
    "build:all": "npm run build -- --all"
  },
  "keywords": [
    "electron-app",
    "electron",
    "browser",
    "kargo"
  ],
  "dependencies": {
    "@cargohq/keyval": "^1.1.0",
    "electron-debug": "^1.0.0",
    "electron-is-dev": "^0.3.0",
    "electron-store": "^2.0.0",
    "electron-titlebar": "^0.0.3",
    "idb-keyval": "^3.0.3",
    "mitt": "^1.1.3",
    "mousetrap": "^1.6.1",
    "normalize-url": "^2.0.1",
    "nprogress": "^0.2.0",
    "tldjs": "^2.2.0",
    "vkey": "^1.0.1",
    "vxv": "^3.1.6",
    "xou": "^1.0.0"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "^1.3.3",
    "electron-builder": "^20.38.5",
    "formatted": "^1.0.0"
  },
  "build": {
    "appId": "com.kargo",
    "productName": "kargo",
    "asar": true,
    "npmRebuild": false,
    "directories": {
      "output": "./dist"
    },
    "files": [
      "**/*",
      "src",
      "!keys",
      "!test",
      "!*.pug",
      "!src/node_modules/test",
      "!release",
      "!.DS_Store",
      "!webpack.config.js",
      "!cmake-js",
      "!pkg",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/node_modules/.bin",
      "!**/{.DS_Store,.git,.gitignore}"
    ],
    "win": {
      "icon": "./src/static/icon.ico"
    },
    "mac": {
      "icon": "./src/static/icon.icns"
    }
  }
}
